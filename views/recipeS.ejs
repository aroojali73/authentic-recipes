<!DOCTYPE html>
<html>
<head>
    <title>All Recipes</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Recipes</h1>
    <% if(recipes.length > 0) { %>
        <ul>
            <% recipes.forEach(function(recipe) { %>
                <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No recipes found.</p>
    <% } %>
</body>
</html>
